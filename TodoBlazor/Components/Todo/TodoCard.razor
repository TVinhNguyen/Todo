<div class="todo-card">
    <h5>@Todo.Title</h5>
    <p>@Todo.Description</p>
    <p>Status: @(Todo.IsCompleted ? "Completed" : "Pending")</p>
    <small>Created: @Todo.CreatedAt.ToString("g")</small>
    @if (Todo.UpdatedAt.HasValue)
    {
        <small>Updated: @Todo.UpdatedAt.Value.ToString("g")</small>
    }
</div>

@code {
    [Parameter]
    public Models.Todo? Todo { get; set; }
}
